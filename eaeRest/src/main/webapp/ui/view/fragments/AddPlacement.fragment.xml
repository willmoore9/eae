<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		title="{i18n>createPlacement}">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="{i18n>englishName}" />
				<Input value="{/ui/createPlacement/englishName}" />
				<Label text="{i18n>placementType}" />
				<Select selectedKey="{/ui/createPlacement/type}" forceSelection="true" >
					<items>
						<core:Item key="NONE" text="" />
						<core:Item key="BROCHURE" text="{i18n>placement_brochure}" />
						<core:Item key="VIDEO" text="{i18n>placement_video}" />
						<core:Item key="TRACT" text="{i18n>placement_tract}" />
						<core:Item key="MAGAZINE" text="{i18n>placement_magazine}" />
						<core:Item key="BOOK" text="{i18n>placement_book}" />
					</items>
				</Select>
				<Label text="{i18n>wtIndex}" />
				<Input value="{/ui/createPlacement/wtIndex}" />
				<Label text="{i18n>language}" />
				<ComboBox
					items="{
						path: '/PublicationLanguages'
					}" selectedKey="{/ui/createPlacement/language/guid}">
					<core:ListItem key="{guid}" text="{langName}"/>
				</ComboBox>
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="{i18n>ok}" press="onCreatePlacementRecord"></Button>
			<Button text="{i18n>cancel}" press="onCancelCreatePlacemenntRecord"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>